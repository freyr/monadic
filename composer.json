{
    "name": "freyr/monadic",
    "description": "A PHP library for monadic operations.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "symplify/easy-coding-standard": "^12.3",
        "phpstan/extension-installer": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Freyr\\Monadic\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Freyr\\Monadic\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
